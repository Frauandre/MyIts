@model IEnumerable<MVC_BikeStores.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Brands</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Name)
        </td>
        <td>
            @Html.ActionLink("Details", "ElencoProdottiPerMarca", "Products", new { id=item.Brand_Id }, null)
        </td>
    </tr>
}

</table>
